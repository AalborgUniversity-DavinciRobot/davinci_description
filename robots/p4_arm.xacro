<?xml version="1.0"?>
<robot name="davinci" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find davinci_description)/robots/davinci_link_macro.xacro" />

  <link name="p4_arm_base">
    <visual>
      <origin
        xyz="0.186 0 0.554"
        rpy="3.14159 0 1.5708" />
      <geometry>
        <mesh filename="package://davinci_description/meshes/p4_arm_base.stl" />
      </geometry>
      <material name="surgical gray"/>
    </visual>
    <collision>
      <origin
        xyz="0.186 0 0.554"
        rpy="3.14159 0 1.5708" />
      <geometry>
        <mesh filename="package://davinci_description/meshes/decimated/p4_arm_base.stl" />
      </geometry>
    </collision>
  </link>

  <joint name="p4_arm_yaw1"
    type="revolute">
    <parent
      link="p4_arm_base"/>
    <child
      link="p4_arm1"/>
    <origin
      xyz="0.198 0 0"
      rpy="0 0 0" />
    <axis
      xyz="0 0 1"/>
    <limit
      lower="-1.5708"
      upper="1.5708"
      effort="1"
      velocity="1" />
  </joint>

  <xacro:davinci_link name="p4_arm1" color="surgical gray"/>

  <joint name="p4_arm_yaw2"
    type="revolute">
    <origin
      xyz="0.582 0 0"
      rpy="0 0 0" />
    <parent
      link="p4_arm1" />
    <child
      link="p4_arm2" />
    <axis
      xyz="0 0 1" />
    <limit
      lower="-2.8"
      upper="2.8"
      effort="1"
      velocity="1" />
    <dynamics
      damping="0.7"/>
  </joint>

  <xacro:davinci_link name="p4_arm2" color="surgical gray" />

  <joint name="p4_arm_yaw3"
    type="revolute">
    <origin
      xyz="0.435 0 0"
      rpy="0 0 0" />
    <parent
      link="p4_arm2" />
    <child
      link="p4_arm3" />
    <axis
      xyz="0 0 1" />
    <limit
      lower="-2.8"
      upper="2.8"
      effort="1"
      velocity="1" />
    <dynamics
      damping="0"/>
  </joint>

  <xacro:davinci_link name="p4_arm3" color="surgical gray" />

  <joint name="p4_arm_roll1"
    type="revolute">
    <origin
      xyz="0 0 0"
      rpy="0 1.5708 0" />
    <parent
      link="p4_arm3" />
    <child
      link="p4_arm4" />
    <axis
      xyz="0 0 1" />
    <limit
      lower="-1.5708"
      upper="1.5708"
      effort="1"
      velocity="1" />
  </joint>

  <xacro:davinci_link name="p4_arm4" color="surgical gray" />

  <joint name="p4_arm_yaw4"
    type="revolute">
    <origin
      xyz="0 0 0.412"
      rpy="0 -1.5708 0" />
    <parent
      link="p4_arm4" />
    <child
      link="p4_rcm_base" />
    <axis
      xyz="0 0 1" />
    <limit
      lower="-2.8"
      upper="2.8"
      effort="1"
      velocity="1" />
  </joint>

</robot>
